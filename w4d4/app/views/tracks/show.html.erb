<h1><%= @track.title %></h1>
<h3><em>on <%= @track.album.title %></em></h3>
<br>
<h2>Lyrics</h2>
<% if @track.lyrics.nil? %>
  <%= "[none saved]" %>
<% else %>
  <% ugly_lyrics(@track.lyrics).each do |line| %>
  &#9835; <%= line %>
  <br>
  <% end %>
<% end %>
<br>
<br>
<%= render "notes/note", track: @track %>
<br>
<br>
<%= render "notes/form", track: @track %>
