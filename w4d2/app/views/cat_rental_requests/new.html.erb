<h1>Request a new cat rental today!</h1>

<%= @rental.errors.full_messages unless @rental.errors.full_messages.empty? %>
<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="cat_id">Cat ID</label>
  <input id="cat_id" type="integer" name="cat_rental_request[cat_id]" value="<%= @rental.cat_id %>">
  <br>
  <br>
  <label for="start_date">Choose Rental Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" value="<%= @rental.start_date %>">
  <br>
  <br>
  <label for="start_date">Choose Rental End Date</label>
  <input type="date" name="cat_rental_request[end_date]" value="<%= @rental.end_date %>">
  <br>
  <br>

  <button>Submit Rental Request</button>
</form>
